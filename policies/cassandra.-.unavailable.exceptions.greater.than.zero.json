{
  "policy": {
    "actions": [
      {
        "category": 3,
        "type": "event"
      }
    ],
    "conditions": [
      {
        "analytic": "actual",
        "level": 1,
        "operator": ">=",
        "wildcard": "cassandra.*Unavailables.OneMinuteRate"
      }
    ],
    "deleted": false,
    "description": "The required number of nodes were unavailable for one or more requests.",
    "duration": 300,
    "enabled": true,
    "name": "Cassandra - Unavailable Exceptions Greater Than Zero",
    "scope": {
      "elementType": "SERVER"
    }
  }
}